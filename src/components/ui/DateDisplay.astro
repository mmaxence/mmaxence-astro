---
interface Props {
  date: Date;
  format?: 'full' | 'short' | 'year-month';
}

const { date, format = 'full' } = Astro.props;

let formattedDate: string;

switch (format) {
  case 'short':
    formattedDate = date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    });
    break;
  case 'year-month':
    formattedDate = date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long'
    });
    break;
  default:
    formattedDate = date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
}
---

<time class="text-sm text-gray-500" datetime={date.toISOString()}>
  {formattedDate}
</time>

